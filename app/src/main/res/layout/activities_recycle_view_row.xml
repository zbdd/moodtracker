<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:minWidth="100dp">

    <LinearLayout
        android:id="@+id/clBorder"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/activity_row_rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:text="@string/activities_name"
            android:textAlignment="center"
            android:textColor="@color/black"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/activities_recycle_view_row_cross"
            android:contentDescription="@string/activities_delete"
            android:gravity="center_vertical"
            android:text="@string/activities_cross"
            android:textAlignment="center"
            android:textColor="@color/white"
            tools:ignore="InefficientWeight,RtlCompat" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>